# Frontend Environment Variables
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:8001
NEXT_PUBLIC_APP_NAME=Claim Mapper
NEXT_PUBLIC_APP_VERSION=0.1.0

# Backend API Environment Variables
NODE_ENV=development
PORT=8000
MONGODB_URI=mongodb://localhost:27017/claim-mapper
REDIS_URL=redis://localhost:6379

# ==============================================================================
# SECURITY: JWT Secret Configuration
# ==============================================================================
# REQUIRED in production - application will fail to start without this!
# Minimum 32 characters, cryptographically random
#
# Generate with: openssl rand -base64 48
# Or use: ./scripts/generate-secrets.sh
# ==============================================================================
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters
JWT_EXPIRES_IN=7d

# CORS and Security
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database Configuration
DB_NAME=claim-mapper
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=2

# Redis Configuration
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# ML Service Configuration  
ML_SERVICE_URL=http://localhost:8002
OPENAI_API_KEY=your-openai-api-key
HUGGING_FACE_API_KEY=your-hugging-face-api-key

# WebSocket Configuration
WS_PORT=8001
WS_CORS_ORIGIN=http://localhost:3000

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.txt,.pdf,.docx,.md
UPLOAD_PATH=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Email Configuration (for notifications)
# Use Gmail, SendGrid, AWS SES, or any SMTP provider
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@claimmapper.com
FROM_NAME=Claim Mapper
REPLY_TO_EMAIL=support@claimmapper.com

# Email Queue Settings
EMAIL_MAX_RETRIES=3
EMAIL_RETRY_DELAY=60000

# Development vs Production
DEBUG=true
ENABLE_SWAGGER=true
ENABLE_PROFILING=false

# Third-party Integrations
GOOGLE_ANALYTICS_ID=
SENTRY_DSN=
MIXPANEL_TOKEN=

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_COLLABORATION=true
ENABLE_FILE_UPLOAD=true
ENABLE_EMAIL_NOTIFICATIONS=false